<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="KamusiTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/KamusiActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/KamusiActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="KamusiActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/kamusi_main_color</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/kamusi_main_color</item>
    </style>
</resources>